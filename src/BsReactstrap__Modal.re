) =>
  ReasonReact.wrapJsForReason(
    ~reactClass=modal,
    ~props=makeProps(
      ~isOpen?,
      ~autoFocus?,
      ~centered?,
      ~size?,
      ~toggle?,
      ~keyboard?,
      ~role?,
      ~labelledBy?,
      ~backdrop?,
      ~onEnter?,
      ~onExit?,
      ~onOpened?,
      ~onClosed?,
      ~className?,
      ~wrapClassName?,
      ~modalClassName?,
      ~backdropClassName?,
      ~contentClassName?,
      ~external_?,
      ~fade?,
      ~cssModule?,
      ~zIndex?,
      ~backdropTransition?,
      ~modalTransition?,
      ()
    ),
    children
  );
