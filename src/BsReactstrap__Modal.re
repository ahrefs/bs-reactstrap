[@bs.module "reactstrap"] external modal : ReasonReact.reactClass = "Modal";

[@bs.obj]
external makeProps : (
  ~isOpen: bool=?,
  ~autoFocus: bool=?,
  ~centered: bool=?,
  ~size: string=?,
  ~toggle: 'a=?,
